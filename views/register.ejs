<!-- Registreerimine leht-->


<% include partials/header.ejs %>


<div class="container col-md-6 col-md-offset-3">

  <%if (errors) { %>
    <% for(var i=0;i<errors.length;i++){%>
      <div class="alert alert-danger"><%=errors[i].msg%></div>
    <%}%>  
  <% } %>

  <form class="form-signin" action="/register" method="POST">
    <h2 class="form-signin-heading"><%=title%></h2>

    <label for="name" class="sr-only">Name</label>
    <input type="text" id="name" class="form-control" name='name' placeholder="Name"  autofocus>

    <label for="Username" class="sr-only">Username</label>
    <input type="text" id="Username" class="form-control" name='username' placeholder="Username" >

    <label for="password" class="sr-only">password</label>
    <input type="text" id="password" class="form-control" name='password' placeholder="Password" >

    <label for="confpass" class="sr-only">Confirm pass</label>
    <input type="text" id="confpass" class="form-control" name='confpass' placeholder="Confirm Pass" >

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="" id="inputEmail" class="form-control" name='email' placeholder="Email address" >
    <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
  </form>

</div> <!-- /container -->


<% include partials/footer.ejs %>